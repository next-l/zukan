<div id="content_detail" class="ui-corner-all">
<h1 class="title">Listing people</h1>
<div id="content_list">

<table>
  <tr>
    <th>Title</th>
    <th>Date of birth</th>
    <th>Place of birth</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td>
      <%= link_to person.title, person %>
      (<% person.names.each do |name| %>
        <%= link_to name.name_string, name %>
      <% end %>)
    </td>
    <td><%= person.date_of_birth %></td>
    <td><%= person.place_of_birth %></td>
    <td><%= link_to 'Add this person', edit_person_path(person, :name_id => @name.id) if @name %></td>
    <td><%= link_to t('page.edit'), edit_person_path(person) %></td>
    <td><%= link_to t('page.destroy'), person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to 'New Person', new_person_path %></li>
  </ul>
</div>
